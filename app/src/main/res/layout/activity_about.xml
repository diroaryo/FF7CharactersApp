<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_about_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:src="@drawable/square_diro" />

        <TextView
            android:id="@+id/tv_about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_nama"
            app:layout_constraintEnd_toEndOf="@+id/iv_about_image"
            app:layout_constraintStart_toStartOf="@+id/iv_about_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_about_image" />

        <TextView
            android:id="@+id/tv_about_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_email"
            app:layout_constraintEnd_toEndOf="@+id/iv_about_image"
            app:layout_constraintStart_toStartOf="@+id/iv_about_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
